# Frontier Alpha - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required for full functionality)
# =============================================================================

# Polygon.io - Real-time market data
# Get your key at: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key

# Alpha Vantage - Fundamentals and sentiment
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# =============================================================================
# Server Configuration
# =============================================================================

PORT=3000
NODE_ENV=development

# =============================================================================
# Database (Optional - uses mock data if not configured)
# =============================================================================

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key

# PostgreSQL (legacy)
DATABASE_URL=postgresql://user:password@localhost:5432/frontier_alpha

# =============================================================================
# Caching (Optional - uses in-memory cache if not configured)
# =============================================================================

REDIS_URL=redis://localhost:6379

# =============================================================================
# ML Engine (Optional)
# =============================================================================

ML_SENTIMENT_ENDPOINT=http://localhost:8000
