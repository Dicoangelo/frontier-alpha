{
  "openapi": "3.0.3",
  "info": {
    "title": "Frontier Alpha API",
    "description": "AI-Powered Cognitive Factor Intelligence Platform API. Provides institutional-grade portfolio analytics, factor analysis, earnings intelligence, and risk management.",
    "version": "1.0.4",
    "contact": {
      "name": "Metaventions AI",
      "url": "https://frontier-alpha.vercel.app"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "https://frontier-alpha.vercel.app/api/v1",
      "description": "Production server"
    },
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Local development server"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "API health and status endpoints"
    },
    {
      "name": "Portfolio",
      "description": "Portfolio management operations"
    },
    {
      "name": "Quotes",
      "description": "Real-time and historical market data"
    },
    {
      "name": "Factors",
      "description": "Factor analysis and exposures"
    },
    {
      "name": "Earnings",
      "description": "Earnings calendar and oracle predictions"
    },
    {
      "name": "Alerts",
      "description": "Risk alerts and notifications"
    },
    {
      "name": "Settings",
      "description": "User settings and preferences"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Get API health status",
        "description": "Returns the health status of the API including version and uptime information.",
        "operationId": "getHealth",
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/portfolio": {
      "get": {
        "tags": ["Portfolio"],
        "summary": "Get user portfolio",
        "description": "Returns the authenticated user's portfolio including positions, cash balance, and total value.",
        "operationId": "getPortfolio",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Portfolio retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Portfolio"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/portfolio/positions": {
      "post": {
        "tags": ["Portfolio"],
        "summary": "Add a position",
        "description": "Add a new position to the user's portfolio.",
        "operationId": "addPosition",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PositionInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Position added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Position"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/portfolio/positions/{id}": {
      "put": {
        "tags": ["Portfolio"],
        "summary": "Update a position",
        "description": "Update an existing position in the user's portfolio.",
        "operationId": "updatePosition",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Position ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PositionUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Position updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Position"
                }
              }
            }
          },
          "404": {
            "description": "Position not found"
          }
        }
      },
      "delete": {
        "tags": ["Portfolio"],
        "summary": "Delete a position",
        "description": "Remove a position from the user's portfolio.",
        "operationId": "deletePosition",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Position ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Position deleted successfully"
          },
          "404": {
            "description": "Position not found"
          }
        }
      }
    },
    "/portfolio/factors/{symbols}": {
      "get": {
        "tags": ["Factors"],
        "summary": "Get factor exposures",
        "description": "Returns factor exposures for the specified symbols.",
        "operationId": "getFactors",
        "parameters": [
          {
            "name": "symbols",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Comma-separated list of stock symbols (e.g., AAPL,MSFT,GOOGL)"
          }
        ],
        "responses": {
          "200": {
            "description": "Factor exposures retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/FactorExposure"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/portfolio/optimize": {
      "post": {
        "tags": ["Portfolio"],
        "summary": "Optimize portfolio",
        "description": "Run portfolio optimization with specified objective and constraints. Uses Monte Carlo simulation for risk estimates.",
        "operationId": "optimizePortfolio",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OptimizationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Optimization results",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OptimizationResult"
                }
              }
            }
          }
        }
      }
    },
    "/quotes/{symbol}": {
      "get": {
        "tags": ["Quotes"],
        "summary": "Get stock quote",
        "description": "Returns the current quote for a stock symbol.",
        "operationId": "getQuote",
        "parameters": [
          {
            "name": "symbol",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Stock symbol (e.g., AAPL)"
          }
        ],
        "responses": {
          "200": {
            "description": "Quote retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Quote"
                }
              }
            }
          },
          "404": {
            "description": "Symbol not found"
          }
        }
      }
    },
    "/quotes/batch": {
      "post": {
        "tags": ["Quotes"],
        "summary": "Get multiple quotes",
        "description": "Returns quotes for multiple stock symbols in a single request.",
        "operationId": "getBatchQuotes",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "symbols": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Array of stock symbols"
                  }
                },
                "required": ["symbols"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Quotes retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "$ref": "#/components/schemas/Quote"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/earnings/upcoming": {
      "get": {
        "tags": ["Earnings"],
        "summary": "Get upcoming earnings",
        "description": "Returns upcoming earnings events for the next 30 days.",
        "operationId": "getUpcomingEarnings",
        "parameters": [
          {
            "name": "symbols",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by comma-separated symbols"
          }
        ],
        "responses": {
          "200": {
            "description": "Upcoming earnings events",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EarningsEvent"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/earnings/oracle/{symbol}": {
      "get": {
        "tags": ["Earnings"],
        "summary": "Get earnings oracle prediction",
        "description": "Returns AI-powered earnings prediction with historical patterns and factor-adjusted expected move.",
        "operationId": "getEarningsOracle",
        "parameters": [
          {
            "name": "symbol",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Stock symbol"
          }
        ],
        "responses": {
          "200": {
            "description": "Earnings prediction",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EarningsOracle"
                }
              }
            }
          }
        }
      }
    },
    "/alerts": {
      "get": {
        "tags": ["Alerts"],
        "summary": "Get user alerts",
        "description": "Returns all active alerts for the authenticated user.",
        "operationId": "getAlerts",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "User alerts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Alert"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/alerts/{id}/dismiss": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Dismiss an alert",
        "description": "Mark an alert as dismissed.",
        "operationId": "dismissAlert",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Alert dismissed"
          }
        }
      }
    },
    "/settings": {
      "get": {
        "tags": ["Settings"],
        "summary": "Get user settings",
        "description": "Returns the authenticated user's settings.",
        "operationId": "getSettings",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "User settings",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserSettings"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Settings"],
        "summary": "Update user settings",
        "description": "Update the authenticated user's settings.",
        "operationId": "updateSettings",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserSettings"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Settings updated"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Supabase JWT token"
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["healthy", "degraded", "unhealthy"]
          },
          "version": {
            "type": "string"
          },
          "uptime": {
            "type": "number",
            "description": "Uptime in seconds"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Portfolio": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "positions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Position"
            }
          },
          "cash": {
            "type": "number"
          },
          "totalValue": {
            "type": "number"
          },
          "currency": {
            "type": "string",
            "default": "USD"
          }
        }
      },
      "Position": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "symbol": {
            "type": "string"
          },
          "shares": {
            "type": "number"
          },
          "costBasis": {
            "type": "number"
          },
          "currentPrice": {
            "type": "number"
          },
          "unrealizedPnL": {
            "type": "number"
          },
          "weight": {
            "type": "number",
            "description": "Position weight as decimal (0-1)"
          }
        }
      },
      "PositionInput": {
        "type": "object",
        "required": ["symbol", "shares", "avgCost"],
        "properties": {
          "symbol": {
            "type": "string",
            "description": "Stock ticker symbol"
          },
          "shares": {
            "type": "number",
            "minimum": 0
          },
          "avgCost": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "PositionUpdate": {
        "type": "object",
        "properties": {
          "shares": {
            "type": "number",
            "minimum": 0
          },
          "avgCost": {
            "type": "number",
            "minimum": 0
          }
        }
      },
      "FactorExposure": {
        "type": "object",
        "properties": {
          "factor": {
            "type": "string",
            "description": "Factor name (e.g., momentum_12m, roe, low_vol)"
          },
          "exposure": {
            "type": "number",
            "description": "Standardized exposure value"
          },
          "tStat": {
            "type": "number",
            "description": "T-statistic for exposure significance"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "contribution": {
            "type": "number",
            "description": "Return contribution from factor"
          }
        }
      },
      "OptimizationRequest": {
        "type": "object",
        "required": ["objective"],
        "properties": {
          "objective": {
            "type": "string",
            "enum": ["max_sharpe", "min_volatility", "risk_parity", "target_return"],
            "description": "Optimization objective"
          },
          "constraints": {
            "type": "object",
            "properties": {
              "maxPositionSize": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.25
              },
              "minPositionSize": {
                "type": "number",
                "minimum": 0,
                "default": 0.02
              },
              "targetVolatility": {
                "type": "number"
              },
              "targetReturn": {
                "type": "number"
              },
              "maxTurnover": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "default": 0.5
              }
            }
          },
          "factorTilts": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            },
            "description": "Target factor exposures"
          }
        }
      },
      "OptimizationResult": {
        "type": "object",
        "properties": {
          "proposedWeights": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          },
          "currentWeights": {
            "type": "object",
            "additionalProperties": {
              "type": "number"
            }
          },
          "trades": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "symbol": {"type": "string"},
                "action": {"type": "string", "enum": ["buy", "sell", "hold"]},
                "currentWeight": {"type": "number"},
                "proposedWeight": {"type": "number"},
                "reason": {"type": "string"}
              }
            }
          },
          "projectedMetrics": {
            "type": "object",
            "properties": {
              "expectedReturn": {"type": "number"},
              "volatility": {"type": "number"},
              "sharpeRatio": {"type": "number"},
              "var95": {"type": "number"},
              "cvar95": {"type": "number"}
            }
          },
          "cognitiveExplanation": {
            "type": "string",
            "description": "Plain-English explanation of recommendations"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      },
      "Quote": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string"
          },
          "last": {
            "type": "number"
          },
          "bid": {
            "type": "number"
          },
          "ask": {
            "type": "number"
          },
          "volume": {
            "type": "integer"
          },
          "change": {
            "type": "number"
          },
          "changePercent": {
            "type": "number"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "EarningsEvent": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string"
          },
          "companyName": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "time": {
            "type": "string",
            "enum": ["BMO", "AMC", "DMH"],
            "description": "Before Market Open, After Market Close, During Market Hours"
          },
          "estimatedEPS": {
            "type": "number"
          },
          "estimatedRevenue": {
            "type": "number"
          },
          "expectedMove": {
            "type": "number",
            "description": "Options-implied expected move percentage"
          }
        }
      },
      "EarningsOracle": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string"
          },
          "nextEarningsDate": {
            "type": "string",
            "format": "date"
          },
          "expectedMove": {
            "type": "number"
          },
          "historicalBeatRate": {
            "type": "number"
          },
          "averagePostEarningsMove": {
            "type": "number"
          },
          "recommendation": {
            "type": "string",
            "enum": ["HOLD", "TRIM", "HEDGE", "ADD"]
          },
          "confidence": {
            "type": "number"
          },
          "reasoning": {
            "type": "string"
          },
          "factorContext": {
            "type": "object",
            "properties": {
              "momentum": {"type": "number"},
              "sentiment": {"type": "number"},
              "quality": {"type": "number"}
            }
          }
        }
      },
      "Alert": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["drawdown", "volatility", "concentration", "earnings", "factor_drift", "sec_filing"]
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "title": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "symbol": {
            "type": "string"
          },
          "value": {
            "type": "number"
          },
          "threshold": {
            "type": "number"
          },
          "suggestedActions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "action": {"type": "string"},
                "label": {"type": "string"}
              }
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "dismissed": {
            "type": "boolean"
          }
        }
      },
      "UserSettings": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "riskTolerance": {
            "type": "string",
            "enum": ["conservative", "moderate", "aggressive"]
          },
          "notificationsEnabled": {
            "type": "boolean"
          },
          "emailAlerts": {
            "type": "boolean"
          },
          "maxPositionPct": {
            "type": "number",
            "minimum": 5,
            "maximum": 50
          },
          "stopLossPct": {
            "type": "number",
            "minimum": 1,
            "maximum": 50
          },
          "takeProfitPct": {
            "type": "number",
            "minimum": 5,
            "maximum": 100
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        }
      }
    }
  }
}
